<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androiddesdecero.navigationbar.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/darkenIconsColorNavigationBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar Color Iconos Navigation Bar" />

        <Button
            android:id="@+id/lightIconsColorNavigationBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar Color Iconos Navigation Bar" />

        <Button
            android:id="@+id/changeColorNavigationBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar Color Navigation Bar" />

        <Button
            android:id="@+id/hideNavigationBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ocultar Navigation Bar" />

    </LinearLayout>

</RelativeLayout>
